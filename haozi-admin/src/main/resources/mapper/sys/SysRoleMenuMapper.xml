<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.lliyuu520.haozi.modules.sys.mapper.SysRoleMenuMapper">

    <select id="getMenuIdList" resultType="long">
        select menu_id
        from sys_role_menu
        where role_id = #{roleId}
    </select>
    <select id="getInterfaceMenuIdList" resultType="java.lang.String">

        select b.name
        from sys_role_menu  a
                 left join sys_menu  b on a.menu_id = b.id
        where a.role_id = #{roleId}
          and b.type = 2
    </select>

    <!-- deleteByMenuId --> 

    <delete id="deleteByMenuId">
        delete from sys_role_menu where menu_id=#{menuId}
    </delete>

    <!-- deleteByRoleId --> 

    <delete id="deleteByRoleId">
        delete from sys_role_menu where role_id=#{roleId}
    </delete>
</mapper>
