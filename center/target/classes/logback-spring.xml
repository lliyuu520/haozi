<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <!-- 项目的appid -->
    <property resource="application.yml"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultvalue="center"/>
    <springProperty scope="context" name="LOGGING_PATH" source="logging.path" defaultvalue="E:\\log\\root\\"/>
    <springProperty scope="context" name="SERVER_PORT" source="server.port" defaultvalue="8700"/>
    <springProperty scope="context" name="HOSTNAME" source="eureka.instance.hostname" defaultvalue="localhost"/>

    <springProperty scope="context" name="RABBITMQ_HOST" source="spring.rabbitmq.host" defaultvalue="192.168.0.154"/>
    <springProperty scope="context" name="RABBITMQ_PORT" source="spring.rabbitmq.port" defaultvalue="5672"/>
    <springProperty scope="context" name="RABBITMQ_USERNAME" source="spring.rabbitmq.username" defaultvalue="admin"/>
    <springProperty scope="context" name="RABBITMQ_PASSWORD" source="spring.rabbitmq.password" defaultvalue="admin"/>


    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([${APP_NAME:-},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-B3-ParentSpanId:-},%X{X-Span-Export:-}]){yellow} %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <appender name="FILE_LOG"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
        </filter>
        <file>${LOGGING_PATH}/${APP_NAME}/${SERVER_PORT}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${appName}/${PORT}/${appName}.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="ASYNC_LOG" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <appender-ref ref="FILE_LOG"/>
    </appender>

    <appender name="RABBITMQ" class="org.springframework.amqp.rabbit.logback.AmqpAppender">
        <layout>
            <pattern>
                {
                "timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}",
                "appName":"${APP_NAME:-}",
                "port":"${SERVER_PORT:-}",
                "hostname":"${HOSTNAME:-}",
                "level": "%level",
                "trace": "%X{X-B3-TraceId:-}",
                "span": "%X{X-B3-SpanId:-}",
                "parent": "%X{X-B3-ParentSpanId:-}",
                "thread": "%thread",
                "class": "%logger{35}",
                "message": "%message",
                "stackTrace": "%exception{10}"
                }
            </pattern>
        </layout>
        <addresses>${RABBITMQ_HOST}</addresses>
        <port>${RABBITMQ_PORT}</port>
        <username>${RABBITMQ_USERNAME}</username>
        <password>${RABBITMQ_PASSWORD}</password>
        <declareExchange>true</declareExchange>
        <exchangeType>direct</exchangeType>
        <exchangeName>${APP_NAME}.log</exchangeName>
        <generateId>true</generateId>
        <charset>UTF-8</charset>
        <durable>true</durable>
        <deliveryMode>NON_PERSISTENT</deliveryMode>
        <autoDelete>false</autoDelete>
        <contentType>json</contentType>
    </appender>


