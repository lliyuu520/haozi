<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lliyuu520.root.modular.order.mapper.OrderMapper">
    <resultMap id="BaseResultMap" type="com.lliyuu520.root.modular.order.entiry.Order">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="number" jdbcType="VARCHAR" property="number"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="product_id" jdbcType="VARCHAR" property="productId"/>
        <result column="total_amount" jdbcType="DECIMAL" property="totalAmount"/>
        <result column="count" jdbcType="INTEGER" property="count"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,  `number`, `status`, product_id, total_amount, `count`, user_id,`create_time`,`update_time`
    </sql>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tcc_order.order
        where id = #{id,jdbcType=BIGINT}
    </select>
    <insert id="insert" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        insert into tcc_order.order (`number`, `status`,
                                     product_id, total_amount, `count`,
                                     user_id, create_time, update_time)
        values (#{order.number,jdbcType=VARCHAR}, #{order.status,jdbcType=TINYINT},
                #{order.productId,jdbcType=VARCHAR}, #{order.totalAmount,jdbcType=DECIMAL}, #{order.count,jdbcType=INTEGER},
                #{order.userId,jdbcType=VARCHAR}, #{order.createTime,jdbcType=TIMESTAMP}, #{order.updateTime,jdbcType=TIMESTAMP})
    </insert>


    <delete id="updateOrderStatus">
        update tcc_order.order
        set status=#{order.status},
            update_time=#{order.updateTime}
        where `number` = #{order.number}
    </delete>
</mapper>
